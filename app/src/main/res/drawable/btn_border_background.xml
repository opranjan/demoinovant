<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/custom_button_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000" /> <!-- Set your background color -->
        </shape>
    </item>
    <item
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Set your border color -->
        </shape>
    </item>
</layer-list>
